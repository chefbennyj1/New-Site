  <script>
    (() => {
      //Audio Interface
      let analyzer;
      let audioSource;
      const audio = new Audio();
      audio.src = "/audio/background.mp3";
      audio.loop = true;
      const audioContext = new AudioContext();
      audioSource = audioContext.createMediaElementSource(audio);
      analyzer = audioContext.createAnalyser();
      audioSource.connect(analyzer);
      analyzer.connect(audioContext.destination);
      analyzer.fftSize = 64; //will be 32 - always half the fttsize
      const bufferLength = analyzer.frequencyBinCount;
      const dataArray = new Uint8Array(bufferLength);
      const audioBtnVisiualizer = document.querySelector('.audio-btn')

      const barWidth = "3px";
      let barHeight;
      let x = 0;

      function animate() {
        analyzer.getByteFrequencyData(dataArray);

        // helper to get average of a small frequency range
        const avg = (start, end) => {
          let sum = 0;
          for (let i = start; i < end; i++) sum += dataArray[i];
          return sum / (end - start);
        };

        // pick four frequency ranges roughly across the spectrum
        const barValues = [
          avg(2, 6),   // low bass
          avg(6, 12),  // mid-low
          avg(12, 20), // mids
          avg(20, 32), // highs
        ];


        // apply smooth scaling with easing/damping
        const bars = audioBtnVisiualizer.querySelectorAll('.audio-bar');
        bars.forEach((bar, i) => {
          const scale = Math.max(barValues[i] / 128, 0.1); // normalize 0â€“2x scale
          const prev = parseFloat(bar.dataset.scale || 1);
          const smoothed = prev + (scale - prev) * 0.25; // damping factor 0.25
          bar.style.transform = `scaleY(${smoothed})`;
          bar.dataset.scale = smoothed;
        });

        requestAnimationFrame(animate);
      }


      document.querySelector('.audio-btn').addEventListener('click', async () => {
        // resume the audio context first
        if (audioContext.state === 'suspended') {
          await audioContext.resume();
        }

        // then play the audio
        audio.play();
        animate();
      });

    })();
  </script>

